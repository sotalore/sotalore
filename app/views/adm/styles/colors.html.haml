- %w[ red yellow green orange blue purple ].each do |c|
  .flex.flex-row
    .basis-1_2
      - (0..4).each do |i|
        .p-4{ style: "background-color: var(--#{c}#{i})" }
          var(#{c}#{i})
    .basis-1_2
      - if c == 'red'
        .p-4.bg-red-900 bg-red-900
        .p-4.bg-red-800 bg-red-800
        .p-4.bg-red-700 bg-red-700
        .p-4.bg-red-600 bg-red-600
        .p-4.bg-red-500 bg-red-500
        .p-4.bg-red-400 bg-red-400
        .p-4.bg-red-300 bg-red-300
        .p-4.bg-red-200 bg-red-200
        .p-4.bg-red-100 bg-red-100

      - if c == 'yellow'
        .p-4.bg-golden-900 bg-golden-900
