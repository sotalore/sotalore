        .p-4.bg-slorange-400 bg-slorange-400
        .p-4.bg-slorange-300 bg-slorange-300
        .p-4.bg-slorange-200 bg-slorange-200
        .p-4.bg-slorange-100 bg-slorange-100

      - if c == 'blue'
        .p-4.bg-sky-900 bg-sky-900
        .p-4.bg-sky-800 bg-sky-800
