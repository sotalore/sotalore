        .p-4.bg-golden-700 bg-golden-700
        .p-4.bg-golden-600 bg-golden-600
        .p-4.bg-golden-500 bg-golden-500
        .p-4.bg-golden-400 bg-golden-400
        .p-4.bg-golden-300 bg-golden-300
        .p-4.bg-golden-200 bg-golden-200
        .p-4.bg-golden-100 bg-golden-100

      - if c == 'green'
        .p-4.bg-green-900 bg-green-900
