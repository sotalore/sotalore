= tile('hero') do
  = tile_heading('Sign In')
  = tile_body do
    = full_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = f.email_field :email
      = f.password_field :password, autocomplete: "off"
      - if devise_mapping.rememberable?
        = f.check_box :remember_me
      = f.actions do
        = f.submit "Sign In"

    = render "devise/shared/links"
